{
  "cli": {
    "version": ">= 7.6.0"
  },
  "build": {
    "base": {
      "env": {}
    },
    "dev": {
      "extends": "base",
      "distribution": "internal",
      "channel": "dev",
      "developmentClient": false, // May be worthwhile in the future, but for now Expo Go is fine
      "env": {
        "ENVIRONMENT": "dev"
      }
    },
    "qa": {
      "extends": "base",
      "distribution": "internal",
      "channel": "qa",
      "env": {
        "ENVIRONMENT": "qa"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "extends": "base",
      "distribution": "store",
      "channel": "production",
      "env": {
        "ENVIRONMENT": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
