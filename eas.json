{
  "cli": {
    "version": ">= 7.6.0"
  },
  "build": {
    "base": {
      "node": "18.19.1",
      "env": {}
    },
    "dev": {
      "extends": "base",
      "distribution": "internal",
      "developmentClient": false, // May be worthwhile in the future, but for now Expo Go is fine
      "env": {
        "FIREBASE_CONFIG_FILE": "FIREBASE_CONFIG_DEV"
      }
    },
    "qa": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "FIREBASE_CONFIG_FILE": "FIREBASE_CONFIG_QA"
      }
    },
    "production": {
      "extends": "base",
      "env": {
        "FIREBASE_CONFIG_FILE": "FIREBASE_CONFIG_PROD"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
